<div class="container">
  <h1><%= @cocktail.name %></h1>
  <%= link_to "Add ingredients to this cocktail", new_cocktail_dose_path(@cocktail) %>
  <% @cocktail.doses&.each do |dose| %>
  <p>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "Delete an ingredient", dose_path(dose), method: :delete %>
  <% end %>
  </p>
</div>
